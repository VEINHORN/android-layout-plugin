<RelativeLayout layout_height="match_parent" layout_width="match_parent">
    <LinearLayout orientation="vertical">
        <ImageView src="http://vk.com/image.png" id="profile"></ImageView>
        <EditText id="firstName" layout_height="wrap_contant" layout_width="wrap_contant"></EditText>
        <EditText id="lastName" layout_height="wrap_contant" layout_width="wrap_contant"></EditText>
        <EditText id="password" layout_height="wrap_contant" layout_width="wrap_contant"></EditText>
    </LinearLayout>
    <TextView layout_height="20dp" layout_width="10dp"></TextView>
    <TextView layout_height="20dp" layout_width="10dp"></TextView>
</RelativeLayout>